doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Memory Game
    link(rel='stylesheet', href='http://yui.yahooapis.com/pure/0.5.0-rc-1/pure-min.css')
    link(rel='stylesheet', href='http://yui.yahooapis.com/pure/0.5.0-rc-1/grids-responsive-min.css')
    link(rel='stylesheet', href='./css/app.css')
  body
    .pure-g
      .pure-u-1-5.controller
        #gametitle Retro Memory
        button.button-game#start Press Start
        #timer.timer(data-time='99') 99
        #level

      .pure-u-4-5.gameboard
        table#board
          tbody
            - for(var i=0; i<4; i++)
              tr
                - for(var j=0; j<5; j++)
                  td.card(data-idx=5*i+j)
                    .flipper
                      .front
                      .back


    script(src='./js/vendor/jquery-2.1.0.js')
    script(src='./js/source/main.js')
